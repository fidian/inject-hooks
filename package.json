{
    "name": "inject-hooks",
    "version": "1.1.0",
    "description": "Combine EventEmitters and middleware to create a powerful hook system.",
    "keywords": [
        "hook",
        "hooks",
        "middleware",
        "event",
        "emitter",
        "eventemitter"
    ],
    "repository": {
        "type": "git",
        "url": "git://github.com/fidian/inject-hooks.git"
    },
    "author": "Tyler Akins <fidian@rumkin.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/fidian/inject-hooks/issues"
    },
    "homepage": "https://github.com/fidian/inject-hooks",
    "scripts": {
        "build": "scripts/build",
        "reinstall": "rm -rf node_modules && npm install",
        "test": "tsx node_modules/.bin/ava"
    },
    "main": "dist/inject-hooks.js",
    "module": "dist/inject-hooks.mjs",
    "unpkg": "dist/inject-hooks.umd.min.js",
    "type": "module",
    "types": "dist/inject-hooks.d.ts",
    "devDependencies": {
        "ava": "^6.1.3",
        "rollup": "^4.18.1",
        "terser": "^5.31.3",
        "tsx": "^4.16.2",
        "typescript": "^5.5.3"
    },
    "ava": {
        "extensions": {
            "cjs": true,
            "mjs": true,
            "js": true,
            "ts": "commonjs"
        },
        "files": [
            "src/**/*.spec.ts"
        ]
    }
